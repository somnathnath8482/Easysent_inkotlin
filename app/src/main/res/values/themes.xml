<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Easysentv2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme</item>
        <item name="colorSecondaryVariant">@color/theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/custom_EditTextStyle</item>
        <item name="fontFamily">@font/adamina</item>
    </style>

    <style name="custom_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/adamina</item>

    </style>

    <style name="custom_EditTextStyle2" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/adamina</item>

    </style>

    <style name="TextHeding" parent="Theme.Easysentv2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="fontFamily">@font/archivo_bold</item>
    </style>

    <style name="selected" parent="Theme.Easysentv2">
        <item name="color">@color/color_selected</item>
    </style>

    <style name="TextHedingSecondery" parent="Theme.Easysentv2">
        <item name="android:textColor">@color/derk</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/adamina</item>
    </style>

    <style name="TextHeding3" parent="Theme.Easysentv2">
        <item name="android:textColor">#716A6A</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/adamina</item>
    </style>


    <style name="Textdesc" parent="Theme.Easysentv2">
        <item name="android:textColor">@color/derk</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="fontFamily">@font/adamina</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="desc" parent="Theme.Easysentv2">
        <item name="android:textColor">#3D3A3A</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/adamina</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
    </style>

    <style name="MainBgCard" parent="Theme.Easysentv2">
        <item name="android:background">@color/white</item>
    </style>




    <style name="Ratingbar" parent="Theme.Easysentv2">
        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:thumb">@null</item>
    </style>


    <style name="my_checkbox_style">
        <item name="buttonTint">@color/thim_color</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/archivo_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/blue</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#fff</item>
        <!--    <item name="stIconStart">@drawable/ic</item>
            <item name="stIconEnd">@drawable/ic</item>-->
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="CheckboxCheck">
        <item name="colorAccent">@color/thim_color</item>
    </style>

    <style name="Theme.Easysentv2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Easysentv2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Easysentv2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="toolbar" parent="Theme.Easysentv2">
        <item name="android:background">@color/thim_color</item>
    </style>

    <style name="alert" parent="Theme.Easysentv2">
        <item name="android:background">#DDDEE4</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="pop_up_menu_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_28sdp</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/_4sdp</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/_4sdp</item>
    </style>



    <style name="splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Easysentv2</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
    </style>
</resources>