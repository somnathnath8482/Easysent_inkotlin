<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/thim_color"
    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/anim_logo"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_14sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/curved_top"
            android:orientation="vertical"
            android:layout_below="@id/banner"
            android:layout_marginTop="@dimen/_50sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_30sdp">

            <TextView
                style="@style/TextHeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/login" />

            <TextView
                android:id="@+id/join_easysent"
                style="@style/TextHedingSecondery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/or_join_easysent"
                android:textColor="@color/thim_color"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ed_Username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/curved_border_black"
                android:hint="@string/username"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_50sdp"
                android:textColorHint="@color/gray_white"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/curved_border_black"
                android:hint="@string/password"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_50sdp"
                android:textColorHint="@color/gray_white"
                />

            <RelativeLayout
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/button_bacground">

                <TextView
                    style="@style/Textdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <TextView
                android:id="@+id/btn_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/thim_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/or"
                style="@style/desc"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/gray_white"
                android:gravity="center_horizontal"
                />

            <RelativeLayout
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/curved_border_green">

                <TextView
                    style="@style/TextHeding3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/register"
                    android:textSize="@dimen/_12sdp"
                    />
            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>

</ScrollView>