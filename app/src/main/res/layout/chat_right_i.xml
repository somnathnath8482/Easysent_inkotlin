<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:id="@+id/main_lay"
    android:gravity="end"
    android:layout_marginBottom="@dimen/_7sdp">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_35sdp"
        android:background="@drawable/chat_left"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/lay_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/_250sdp"
                android:scaleType="centerCrop"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_files"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/btn_play"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"
                />
        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lay_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#BED9F4"
            >
            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_doc"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:src="@drawable/ic_files"
                />
            <TextView
                android:visibility="visible"
                android:id="@+id/iv_attachment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_140sdp"
                android:text="file_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:autoLink="web"
                style="@style/desc"
                android:textColor="#3D3A3A"
                />
            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_download"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:src="@drawable/ic_download"
                app:tint="@color/white" />
            <ProgressBar
                android:progressTint="@color/thim_color"
                android:visibility="gone"
                android:id="@+id/iv_download_progress"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:progress="0"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@drawable/circular_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:textAlignment="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/message"
            style="@style/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoLink="all"
            android:gravity="center_horizontal"
            android:paddingEnd="@dimen/_10sdp"
            android:text=""
            android:textColor="#3D3A3A" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                style="@style/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:text="11/01.2002"
                android:textColor="@color/gray_white" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_1sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:src="@drawable/ic_check" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
